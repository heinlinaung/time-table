  # end

  # before_all do
  #   unlock_keychain(path: '~/Library/Keychains/login.keychain',password: "A1DC2A63B3D14817A64619FDDBC92264")
  # end
  def ensure_temp_keychain(name)
    delete_keychain(
      name: name
    ) if File.exist? File.expand_path("~/Library/Keychains/#{name}-db")
    create_keychain(
      name: name,
      password: 'ggwp',
      unlock: true,
      timeout: false
    )
  end

  lane :beta do
  	ensure_temp_keychain 'fastlane_enterprise'
    match(type: "appstore", readonly: true,keychain_name: 'fastlane_enterprise',keychain_password: 'ggwp')
    increment_build_number(xcodeproj: "TimeTable.xcodeproj")
    gym(
    	scheme: "TimeTable",
    	configuration: "Release",
    	clean: true,
        sdk: "iphoneos",
        export_xcargs: "-allowProvisioningUpdates"
      #destination: "platform=iOS Simulator,name=iPhone 6",
    )
  end


  desc "Run unit and ui tests"
  lane :runTests do
    run_tests(
      scheme: "TimeTable",
      #code_coverage: true 
    )
  end

end
