default_platform(:ios)

platform :ios do
  # desc "Push a new beta build to TestFlight"
  # lane :beta do
  # 	match(type: "development", readonly: is_ci)
  #   increment_build_number(xcodeproj: "TimeTable.xcodeproj")
  #   # build_app(scheme: "TimeTable")
  #   gym(scheme: "TimeTable")
